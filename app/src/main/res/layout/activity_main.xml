<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/et_content"
        android:layout_width="match_parent"
        android:layout_height="45dp"/>

    <Button
        android:id="@+id/bt_save"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:text="存入数据并显示"/>

    <TextView
        android:id="@+id/tv_show"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/bt_readcontact"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:text="读取联系人"/>

    <TextView
        android:id="@+id/tv_showcontact"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/bt_startservices"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:text="开启服务"/>

    <Button
        android:id="@+id/bt_stopservices"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:text="停止服务"/>

    <Button
        android:id="@+id/bt_bindservices"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:text="绑定服务"/>

    <Button
        android:id="@+id/bt_unbindservices"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:text="解绑服务"/>

    <Button
        android:id="@+id/bt_regist_recver"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:text="注册广播"/>

    <Button
        android:id="@+id/bt_send_msg"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:text="通过广播发送消息"/>
    <Button
        android:id="@+id/bt_unregist"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:text="注销广播"/>
</LinearLayout>